<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_action_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/icon_parent_circle" />

    <TextView
        android:id="@+id/tv_action_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/daza_space_12"
        android:layout_marginTop="@dimen/daza_space_7"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/default_text"
        android:textColor="@color/color_font_4"
        android:textSize="@dimen/daza_font_10" />

</LinearLayout>
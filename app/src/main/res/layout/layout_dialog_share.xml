<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_dialog_share_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/daza_space_16"
        android:layout_marginLeft="@dimen/daza_space_15"
        android:layout_marginRight="@dimen/daza_space_15"
        android:background="@drawable/dialog_corner_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_share_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:text="选择要分享的平台"
            android:textColor="@color/color_font_8"
            android:textSize="@dimen/daza_font_12" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv_dialog_share"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="34dp"
            android:overScrollMode="never" />

    </LinearLayout>

    <!--<View-->
    <!--android:id="@+id/empty_view"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:background="@color/color_transparent" />-->

</LinearLayout>
